<!DOCTYPE html>
<html>
<head>
  <title>Book Collection App - Add Book</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body>
  <header>
    <div class="logo">
      <%= link_to "books#index" do %>
        <%= image_tag 'book.png', alt: 'Logo' %>
      <% end %>
    </div>
    <nav>
      <ul>
        <li><%= link_to 'Home', books_path %></li>
      </ul>
    </nav>
  </header>

  <main>
    <% if flash[:alert] %>
      <p><%= flash[:alert] %></p>
    <% end %>

    <h1>Add a New Book</h1>

    <%= form_with(model: @book, local: true, class: 'book-form') do |form| %>
      <div class="form-group">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-input' %>
      </div>
      <div class="form-group">
        <%= form.label :author, class: 'form-label' %>
        <%= form.text_field :author, class: 'form-input' %>
      </div>
      <div class="form-group">
        <%= form.label :price, class: 'form-label' %>
        <%= form.number_field :price, class: 'form-input', step: 0.01 %>
      </div>
      <div class="form-group">
        <%= form.label :published_date, class: 'form-label' %>
        <%= form.date_select :published_date, class: 'form-input' %>
      </div>
      <div class="form-group">
        <%= form.submit 'Create Book', class: 'btn btn-custom' %>
      </div>
    <% end %>


  </main>

  <footer>
    <p>Copyrights @Uzma Hamid 2024</p>
  </footer>
</body>
</html>
